{
  "name": "luna-lang-support",
  "displayName": "LuNA Language Support",
  "description": "Подсветка синтаксиса, автодополнение и LSP для языка LuNA (.fa + ucodes.cpp).",
  "version": "0.0.2",
  "publisher": "localuser",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:luna",
    "onStartupFinished",
    "onCommand:luna.assistant.open",
    "onCommand:luna.assistant.reindexWiki",
    "onCommand:luna.assistant.toggle",
    "onCommand:luna.assistant.setApiKey",
    "onCommand:luna.assistant.explainSelection",
    "onCommand:luna.assistant.explainFile",
    "onView:lunaKnowledgeBaseView",
    "onView:lunaProjectsView",
    "onCommand:luna.kb.refresh",
    "onCommand:luna.kb.setStorageCredentials",
    "onCommand:luna.kb.clearStorageCredentials",
    "onCommand:luna.kb.createVersion",
    "onCommand:luna.kb.selectVersion",
    "onCommand:luna.kb.selectVersionForFolder",
    "onCommand:luna.kb.syncDocs",
    "onCommand:luna.kb.uploadDocs",
    "onCommand:luna.kb.uploadRaw",
    "onCommand:luna.kb.uploadFolder",
    "onCommand:luna.kb.importThesisPdf",
    "onCommand:luna.kb.deleteObject",
    "onCommand:luna.kb.openObject",
    "onCommand:luna.kb.statusBar.selectVersion"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "luna",
          "title": "LuNA",
          "icon": "resources/luna.svg"
        }
      ]
    },
    "views": {
      "luna": [
        {
          "id": "lunaProjectsView",
          "name": "Projects"
        },
        {
          "id": "lunaKnowledgeBaseView",
          "name": "Knowledge Base"
        }
      ]
    },
    "languages": [
      {
        "id": "luna",
        "aliases": [
          "LuNA",
          "luna"
        ],
        "extensions": [
          ".fa"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "luna",
        "scopeName": "source.luna",
        "path": "./syntaxes/luna.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "luna.assistant.open",
        "title": "LuNA: Open AI Assistant"
      },
      {
        "command": "luna.assistant.reindexWiki",
        "title": "LuNA: Reindex Knowledge Base for Assistant"
      },
      {
        "command": "luna.assistant.toggle",
        "title": "LuNA: Toggle AI Assistant"
      },
      {
        "command": "luna.assistant.setApiKey",
        "title": "LuNA: Set Yandex API Key"
      },
      {
        "command": "luna.assistant.explainSelection",
        "title": "LuNA: Explain Selection"
      },
      {
        "command": "luna.assistant.explainFile",
        "title": "LuNA: Explain File"
      },
      {
        "command": "luna.kb.refresh",
        "title": "LuNA KB: Refresh"
      },
      {
        "command": "luna.kb.setStorageCredentials",
        "title": "LuNA KB: Set Storage Credentials"
      },
      {
        "command": "luna.kb.clearStorageCredentials",
        "title": "LuNA KB: Clear Storage Credentials"
      },
      {
        "command": "luna.kb.createVersion",
        "title": "LuNA KB: Create Version"
      },
      {
        "command": "luna.kb.selectVersion",
        "title": "LuNA KB: Select Version"
      },
      {
        "command": "luna.kb.selectVersionForFolder",
        "title": "LuNA KB: Select Version for Project"
      },
      {
        "command": "luna.kb.syncDocs",
        "title": "LuNA KB: Sync Docs"
      },
      {
        "command": "luna.kb.uploadDocs",
        "title": "LuNA KB: Upload Docs Files"
      },
      {
        "command": "luna.kb.uploadRaw",
        "title": "LuNA KB: Upload Raw Files"
      },
      {
        "command": "luna.kb.uploadFolder",
        "title": "LuNA KB: Upload Docs Folder"
      },
      {
        "command": "luna.kb.importThesisPdf",
        "title": "LuNA KB: Import Thesis PDF"
      },
      {
        "command": "luna.kb.deleteObject",
        "title": "LuNA KB: Delete Object"
      },
      {
        "command": "luna.kb.openObject",
        "title": "LuNA KB: Open Object"
      },
      {
        "command": "luna.kb.statusBar.selectVersion",
        "title": "LuNA KB: Select Version (Status Bar)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "luna.assistant.explainSelection",
          "when": "editorHasSelection && (resourceExtname == '.fa' || resourceExtname == '.cpp' || resourceExtname == '.cc' || resourceExtname == '.cxx' || resourceExtname == '.h' || resourceExtname == '.hpp' || resourceExtname == '.hh')",
          "group": "navigation@20"
        },
        {
          "command": "luna.assistant.explainFile",
          "when": "resourceExtname == '.fa' || resourceExtname == '.cpp' || resourceExtname == '.cc' || resourceExtname == '.cxx' || resourceExtname == '.h' || resourceExtname == '.hpp' || resourceExtname == '.hh'",
          "group": "navigation@21"
        }
      ],
      "view/title": [
        {
          "command": "luna.kb.refresh",
          "when": "view == lunaKnowledgeBaseView",
          "group": "navigation@1"
        },
        {
          "command": "luna.kb.setStorageCredentials",
          "when": "view == lunaKnowledgeBaseView",
          "group": "navigation@2"
        },
        {
          "command": "luna.kb.createVersion",
          "when": "view == lunaKnowledgeBaseView",
          "group": "navigation@3"
        },
        {
          "command": "luna.kb.uploadDocs",
          "when": "view == lunaKnowledgeBaseView",
          "group": "navigation@4"
        },
        {
          "command": "luna.kb.uploadRaw",
          "when": "view == lunaKnowledgeBaseView",
          "group": "navigation@5"
        },
        {
          "command": "luna.kb.importThesisPdf",
          "when": "view == lunaKnowledgeBaseView",
          "group": "navigation@6"
        }
      ],
      "view/item/context": [
        {
          "command": "luna.kb.deleteObject",
          "when": "view == lunaKnowledgeBaseView && viewItem == lunaKbObject",
          "group": "inline@2"
        },
        {
          "command": "luna.kb.openObject",
          "when": "view == lunaKnowledgeBaseView && viewItem == lunaKbObject",
          "group": "inline@1"
        },
        {
          "command": "luna.kb.selectVersion",
          "when": "view == lunaKnowledgeBaseView && viewItem == lunaKbVersion",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "properties": {
        "luna.assistant.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Включить LuNA AI Assistant (RAG по базе знаний). Если выключено — плагин работает как раньше, без сети и без ИИ."
        },
        "luna.assistant.indexStorageScope": {
          "type": "string",
          "enum": [
            "global",
            "workspace"
          ],
          "default": "global",
          "description": "Где хранить локальный индекс ассистента (по умолчанию в глобальном хранилище расширения, чтобы не дублировать в каждом проекте)."
        },
        "luna.assistant.indexStoragePath": {
          "type": "string",
          "default": "assistant/index.json",
          "description": "Путь к файлу индекса. Если scope=global, путь относительно globalStorage расширения. Если scope=workspace — относительно корня workspace. На диск сохранится отдельный файл на каждую версию базы знаний."
        },
        "luna.assistant.yandexFolderId": {
          "type": "string",
          "default": "",
          "description": "Folder ID в Yandex Cloud. Нужен, чтобы сформировать modelUri для эмбеддингов/генерации (например emb://<folder>/text-search-doc/latest)."
        },
        "luna.assistant.docEmbeddingModelUri": {
          "type": "string",
          "default": "",
          "description": "Model URI для эмбеддингов документов. Рекомендуется: emb://<folder_ID>/text-search-doc/latest"
        },
        "luna.assistant.queryEmbeddingModelUri": {
          "type": "string",
          "default": "",
          "description": "Model URI для эмбеддингов запросов. Рекомендуется: emb://<folder_ID>/text-search-query/latest"
        },
        "luna.assistant.generationModelUri": {
          "type": "string",
          "default": "",
          "description": "Model URI для генерации ответа. Пример: gpt://<folder_ID>/yandexgpt/latest (уточните в AI Studio)."
        },
        "luna.assistant.topK": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Сколько фрагментов базы знаний подмешивать в контекст RAG (Top-K по похожести)."
        },
        "luna.assistant.chunkChars": {
          "type": "number",
          "default": 1800,
          "minimum": 300,
          "maximum": 8000,
          "description": "Размер чанка (примерно, в символах) при разбиении базы знаний на фрагменты для индекса."
        },
        "luna.assistant.codeExplain.maxChars": {
          "type": "number",
          "default": 16000,
          "minimum": 2000,
          "maximum": 200000,
          "description": "Максимальный размер кода (в символах), отправляемого на объяснение."
        },
        "luna.kb.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Включить облачную базу знаний LuNA (Yandex Object Storage)."
        },
        "luna.kb.storage.bucket": {
          "type": "string",
          "default": "",
          "description": "Имя bucket в Yandex Object Storage, где хранится база знаний."
        },
        "luna.kb.storage.endpoint": {
          "type": "string",
          "default": "https://storage.yandexcloud.net",
          "description": "S3 endpoint для Object Storage. Обычно https://storage.yandexcloud.net"
        },
        "luna.kb.storage.region": {
          "type": "string",
          "default": "ru-central1",
          "description": "S3 region (для Yandex Cloud обычно ru-central1)."
        },
        "luna.kb.storage.basePrefix": {
          "type": "string",
          "default": "luna-kb",
          "description": "Префикс внутри bucket, под которым хранится база знаний (например luna-kb)."
        },
        "luna.kb.defaultVersion": {
          "type": "string",
          "default": "luna7",
          "description": "Версия документации по умолчанию (если в проекте не выбрана другая)."
        },
        "luna.kb.knownVersions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Если заполнено, ограничивает список версий (иначе версии определяются по папкам в bucket)."
        },
        "luna.kb.projectVersion": {
          "type": "string",
          "default": "",
          "description": "Версия документации для текущего проекта (workspace folder)."
        }
      },
      "title": "LuNA"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.966.0",
    "pdf-parse": "^1.1.4",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
